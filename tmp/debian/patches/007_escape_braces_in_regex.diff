@@ -4459,7 +4459,7 @@ sub _MifEscapeNewlink {
     # strip backquotes 
     $link =~ s/\`//g;
 
-    1 while $link =~ s/{{.:([^}]*)}}/$1/e;
+    1 while $link =~ s/\{\{.:([^}]*)\}\}/$1/e;
 
     $link =~ s/^\s+//;
 
